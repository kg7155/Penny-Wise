@model IEnumerable<Penny_Wise.Models.Transaction>

@{
    ViewData["Title"] = "Incomes";
}


<div class="main">
    <div class="container">
        <a class="button" id="current-month"></a>
        <a asp-action="AddNew" class="button button-action">Add income</a>
        <table class="table">
            <thead>
            <tr>
                <th>Account</th>
                <th>Value (EUR)</th>
                <th>Category</th>
                <th>Date</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @item.Date.Date.ToString("MM-dd-yyyy")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div>
            <select class="select-account" id="goals-select-account" name="incomes-select-account">
                @foreach (var acc in ViewBag.Accounts)
                {
                    <option value="@acc.ID">@acc.Type</option>
                }
            </select>
            <button class="small-button">Generate graph</button>
            <canvas id="canvas-bar-graph" class="expenses"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Scripts -->
    <script type="text/javascript" src="~/js/bar-graph.js"></script>
}