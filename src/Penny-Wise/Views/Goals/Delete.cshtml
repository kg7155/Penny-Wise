@model Penny_Wise.Models.Goal

@{
    ViewData["Title"] = "Delete";
}

<div class="main">
    <div class="container">
        <form asp-action="Delete">
            <div class="add-form">
                <h4>Are you sure you want to delete this goal:</h4>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="data">
                    <label asp-for="Account">Account:</label>
                        <input asp-for="Account" readonly="readonly" />
                    <label asp-for="Amount">Amount:</label>
                        <input asp-for="Amount" readonly="readonly"/>
                    <label asp-for="DateTo">Till:</label>
                        <input type="date" asp-for="DateTo" readonly="readonly"/>
                </div>
                <button type="submit" id="add-account" class="text-action button button-action">Delete</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
