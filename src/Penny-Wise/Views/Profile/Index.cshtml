@{
    Layout = null;
    ViewData["Title"] = "Profile";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Penny-Wise</title>
    <link rel="icon" href="~/images/favicon.png" type="image/png">
    <link rel="stylesheet" href="~/css/main.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine" type="text/css">
</head>
<body>
    <!-- Wrapper -->
    <div class="wrapper">

        <!-- Sidebar -->
        <div class="sidebar">

            <!-- Menu -->
            <nav class="sidebar-nav">
                <div class="sidebar-brand">
                    <a href="overview.html">
                        <div class="logo"></div>
                        <div class="logo-text">Penny<br>Wise</div>
                    </a>
                </div>
                <ul>
                    <li class="overview"><a href="Overview">Overview</a></li>
                    <li class="expenses"><a href="Expenses">Expenses</a></li>
                    <li class="incomes"><a href="Incomes">Incomes</a></li>
                    <li class="accounts"><a href="Accounts">Accounts</a></li>
                    <li class="goals"><a href="Goals">Goals</a></li>
                    <li class="reports"><a href="Reports">Reports</a></li>
                    <li class="profile"><a href="Profile" class="active">Profile</a></li>
                    <li class="logout"><a href="#logout">Log out</a></li>
                </ul>
            </nav>
        </div>

        <!-- Main -->
        <div class="main">
            <div class="container">
                <div class="container-video">
                    <video autoplay id="video" width="320" height="240"></video>
                    <canvas id="canvas-video" width="320" height="240"></canvas>
                </div>
                <button id="snap" class="button button-action button-photo-capture">Snap!</button>
                <button id="take-new-photo" class="button button-action button-photo-capture">Take a new photo</button>
                <div class="container-account-info">
                    <div id="name" contenteditable="true">Jack Longtoes</div>
                    <div id="email" contenteditable="true">jack.longtoes@pennywise.com</div>
                    <div id="password" contenteditable="true">*********</div>
                    <a class="text-action button button-action" id="save">Save</a><br />
                    <a class="button button-action" id="button-delete-account">Delete my Penny-Wise account. :(</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script type="text/javascript" src="assets/js/photo-capture.js"></script>

</body>